<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"	 
    tools:context="com.energyeye.sales.AddOpertunitiesActivity" >

    <EditText
        android:id="@+id/projectTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/projectTitle"         >       
    </EditText>

    <EditText
        android:id="@+id/description"
        android:background="@color/ProjectDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/projectTitle"
        android:layout_below="@+id/projectTitle"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textMultiLine" 
   		 android:lines="4"
    	android:minLines="2"
        
        android:hint="@string/description" />

   <LinearLayout
       android:id="@+id/linearLayout1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/description"
       android:layout_alignParentRight="true"
       android:layout_below="@+id/description"
       android:orientation="horizontal"
       android:weightSum="3" >

       <Spinner
           android:id="@+id/spinner1"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1" />

       <Spinner
           android:id="@+id/spinner2"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1" />
       
        <Spinner
           android:id="@+id/spinner3"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1" />
       
       
   </LinearLayout>
   
   
   
    <LinearLayout
       android:id="@+id/linearLayout2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/linearLayout1"
       android:layout_alignParentRight="true"
       android:layout_below="@+id/linearLayout1"
       android:orientation="horizontal"
       android:weightSum="2" >

    <EditText
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/contact" >
       
    </EditText>
    
      <EditText
          android:id="@+id/designation"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:hint="@string/designation" >
       
    </EditText>
       
       
   </LinearLayout>  
    
    
     <LinearLayout
       android:id="@+id/linearLayout3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/linearLayout2"
       android:layout_alignParentRight="true"
       android:layout_below="@+id/linearLayout2"
       android:orientation="horizontal"
       android:weightSum="2" >

    <EditText
        android:id="@+id/address1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/address1" >
       
    </EditText>
    
      <EditText
          android:id="@+id/address2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:hint="@string/address2" >
       
    </EditText>
       
       
   </LinearLayout>
   
     <LinearLayout
       android:id="@+id/linearLayout4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/linearLayout3"
       android:layout_alignParentRight="true"
       android:layout_below="@+id/linearLayout3"
       android:orientation="horizontal"
       android:weightSum="2" >

    <EditText
        android:id="@+id/county"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/county" >
       
    </EditText>
    
      <EditText
          android:id="@+id/city"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:hint="@string/town" >
       
    </EditText>
       
       
   </LinearLayout>
   
     
    <LinearLayout
       android:id="@+id/linearLayout5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/linearLayout4"
       android:layout_alignParentRight="true"
       android:layout_below="@+id/linearLayout4"
       android:orientation="horizontal"
       android:weightSum="3" >

    <EditText
        android:id="@+id/compcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/compcode" >
       
    </EditText>
    
      <EditText
          android:id="@+id/postcode"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:hint="@string/postcode" >
       
    </EditText>
    
       <EditText
           android:id="@+id/dayphone"
           android:inputType="phone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:ems="10"
           android:hint="@string/dayphone" >
       
    </EditText>
       
       
   </LinearLayout> 
    <LinearLayout
       android:id="@+id/linearLayout6"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/linearLayout5"
       android:layout_alignParentRight="true"
       android:layout_below="@+id/linearLayout5"
       android:orientation="horizontal"
       android:weightSum="2" >

    <EditText
        android:id="@+id/eamil"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/eamil" >
       
    </EditText>
    
      <EditText
          android:id="@+id/eveningphone"
          android:inputType="phone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:hint="@string/eveningphone" >
       
    </EditText>      
       
       
   </LinearLayout> 
    
     <EditText
         android:id="@+id/other"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/linearLayout6"
         android:layout_below="@+id/linearLayout6"
         android:layout_marginTop="28dp"
         android:ems="10"
         android:hint="@string/other"
         android:inputType="textMultiLine"
         android:lines="3"
         android:minLines="2" />

     <Button
         android:id="@+id/nextOpportunities"
         android:background="@color/NextOppertunities"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/other"
         android:layout_below="@+id/other"
         android:layout_marginRight="23dp"
         android:layout_marginTop="26dp"
         android:text="@string/next" />

</RelativeLayout>