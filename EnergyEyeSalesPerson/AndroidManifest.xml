<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.energyeye.salesperson"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    
    <supports-screens
			android:smallScreens="true"
				android:normalScreens="true"
				android:largeScreens= "true"
				android:anyDensity="true"
		/>
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
         <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >  
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />              
            </intent-filter>        
        </activity>
        
        
          <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test" >                   
              
        </activity>
        
        <activity
            android:name=".SignatureActivity"
            android:label="@string/app_name" >         
        </activity>
        
         
        
        
     
      
        <activity
            android:name=".PostLoginActivity"
            android:label="@string/title_activity_post_login" >
        </activity>
        <activity
            android:name=".PersonalSetting"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.PersonalSetting" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Task"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.Task" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Oppertunities"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.Oppertunities" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddOpertunitiesActivity"
            android:label="@string/title_activity_add_opertunities" >
        </activity>
        
    </application>

</manifest>
